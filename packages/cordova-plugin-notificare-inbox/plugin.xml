<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-notificare-inbox"
        version="3.4.0-beta.2"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Notificare Inbox</name>

    <js-module name="NotificareInbox" src="build/notificare-inbox.bundle.js">
        <clobbers target="NotificareInbox" />
        <merges target="cordova.plugins.NotificareInbox" />
    </js-module>

    <asset src="build/notificare-inbox.bundle.js.map" target="plugins/notificare-inbox/build/notificare-inbox.bundle.js.map" />

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <preference name="AndroidXEnabled" value="true" />

            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinVersion" value="1.6.10" />
        </config-file>

        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="NotificareInbox">
                <param name="android-package" value="re.notifica.inbox.cordova.NotificareInboxPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="NotificareInbox">
                <param name="android-package" value="re.notifica.inbox.cordova.NotificareInboxPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/NotificareInboxPlugin.kt" target-dir="app/src/main/kotlin/re/notifica/inbox/cordova" />
        <source-file src="src/android/NotificareInboxPluginEventBroker.kt" target-dir="app/src/main/kotlin/re/notifica/inbox/cordova" />

        <framework custom="true" src="src/android/build-extras.gradle" type="gradleReference" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="NotificareInbox">
                <param name="ios-package" value="NotificareInboxPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/NotificareInboxPlugin.swift" />
        <source-file src="src/ios/NotificareInboxPluginEventBroker.swift" />

        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git" />
            </config>
            <pods use-frameworks="true">
                <pod name="Notificare/NotificareInboxKit" spec="3.4.0-beta.3" />
            </pods>
        </podspec>
    </platform>
</plugin>
